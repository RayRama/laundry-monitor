{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.ts"
    },
    {
      "src": "/dashboard",
      "dest": "src/server.ts"
    },
    {
      "src": "/leaderboard",
      "dest": "src/server.ts"
    },
    {
      "src": "/monitor",
      "dest": "src/server.ts"
    },
    {
      "src": "/login",
      "dest": "src/server.ts"
    },
    {
      "src": "/styles/(.*)",
      "dest": "src/server.ts"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "src/server.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "src/server.ts"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
